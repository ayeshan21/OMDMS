@model Online_Medicine_Donation.ViewModel.RequestVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Emergency Form";
}
<form id="medicineForm" method="post" enctype="multipart/form-data">
    <div class="p-4 bg-light">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Medicine Full Name *</label>
            <input asp-for="emergencyRequest.Name" class="form-control" id="medName" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity" class="control-label"> Medicine Quantity *</label>
            <input asp-for="emergencyRequest.Quantity" class="form-control" type="number" min="1" id="quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Type" class="control-label">Medicine Type</label>
            <select asp-for="emergencyRequest.Type" class="form-control" id="type">
                <option value="Tablet">Tablet</option>
                <option value="Capsule">Capsule</option>
                <option value="Syrup">Syrup</option>
                <option value="Cream">Cream</option>
                <option value="Injection">Injection</option>
                <option value="Inhaler">Inhaler</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="form-group d-flex justify-content-between">
            <input type="submit" value="Send emergency request" class="btn btn-success" id="requestMedicine" name="requestmedicine"/>
            <input type="submit" value="Change request" class="btn btn-danger" id="changeRequest" name="changerequest" />

        </div>
    </div>
</form>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function(){
            $("#requestMedicine").click(function (event) {
                event.preventDefault();

                var formdata = new FormData();
                formdata.append("emergencyRequest.Name", $("#medName").val());
                formdata.append("emergencyRequest.Quantity", $("#quantity").val());
                formdata.append("emergencyRequest.Type", $("#type").val());
          
                $.ajax({
                    url: "/Ngo/CreateMedicine",
                    type: "POST",
                    data: formdata,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        Swal.fire({
                            title: "Request Sent!",
                            icon: "success"
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Error details:", xhr.responseText);
                        Swal.fire({
                            title: "Error",
                            text: xhr.responseText || "Something went wrong!",
                            icon: "error"
                        });
                    }
                });

            });
        });
    </script>
}