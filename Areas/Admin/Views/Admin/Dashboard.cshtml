@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Status Pie Chart
        var statusCtx = document.getElementById('statusPieChart').getContext('2d');
        var statusPieChart = new Chart(statusCtx, {
            type: 'pie',
            data: {
                labels: ['Pending', 'Completed', 'Rejected'],
                datasets: [{
                    data: [
        @ViewBag.DonationStatusStats.Pending,
        @ViewBag.DonationStatusStats.Completed,
        @ViewBag.DonationStatusStats.Rejected
                            ],
                    backgroundColor: [
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(255, 99, 132, 0.7)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                let label = context.label || '';
                                let value = context.raw || 0;
                                let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                let percentage = Math.round((value / total) * 100);
                                return `${label}: ${value} (${percentage}%)`;
                            }
                        }
                    }
                }
            }
        });

        // User Growth Chart
        var userGrowthCtx = document.getElementById('userGrowthChart').getContext('2d');
        var userGrowthChart = new Chart(userGrowthCtx, {
            type: 'line',
            data: {
                labels: @Json.Serialize(ViewBag.UserGrowthData.Labels),
                datasets: [
                    {
                        label: 'NGOs',
                        data: @Json.Serialize(ViewBag.UserGrowthData.NGOs),
                        borderColor: 'rgba(255, 99, 132, 1)',
                        backgroundColor: 'rgba(255, 99, 132, 0.1)',
                        borderWidth: 2,
                        tension: 0.1
                    },
                    {
                        label: 'Donors',
                        data: @Json.Serialize(ViewBag.UserGrowthData.Donors),
                        borderColor: 'rgba(54, 162, 235, 1)',
                        backgroundColor: 'rgba(54, 162, 235, 0.1)',
                        borderWidth: 2,
                        tension: 0.1
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
