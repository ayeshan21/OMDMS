@model Online_Medicine_Donation.ViewModel.CombinedRequestVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="text-center">Donation Request</h1>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Medicine Name</th>
                        <th>Quantity</th>
                        <th>Pharmaceutical company</th>
                        <th>Type</th>
                        <th>Condition</th>
                        <th>Expiry date</th>
                        <th>Selected NGO</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DonationRequests)
                    {
                        <tr>
                            <td>@item.donationRequest.Name</td>
                            <td>@item.donationRequest.Quantity</td>
                            <td>@item.donationRequest.Company</td>
                            <td>@item.donationRequest.Type</td>
                            <td>@item.donationRequest.Condition</td>
                            <td>@item.donationRequest.ExpiryDate</td>
                            <td>@item.donationRequest.SelectNgo</td>
                            <td>
                                <a asp-action="CheckValidity" asp-route-id="@item.donationRequest.DonationId" class="btn btn-sm btn-primary">Check Validity</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<h1 class="text-center">Emergency Request</h1>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Medicine Name</th>
                        <th>Quantity</th>
                        <th>Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.EmergencyRequests)
                    {
                        <tr>
                            <td>@item.emergencyRequest.Name</td>
                            <td>@item.emergencyRequest.Quantity</td>
                            <td>@item.emergencyRequest.Type</td>
                            <td>
                                <form asp-action="AcceptRequest" asp-route-id="@item.emergencyRequest.EmergencyId" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-success">Accept</button>
                                </form>
                                <form asp-action="RejectRequest" asp-route-id="@item.emergencyRequest.EmergencyId" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
