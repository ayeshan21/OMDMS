@model IEnumerable<Online_Medicine_Donation.DataModel.Online_Medicine_Donation.Models.UserProfile>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "NGO List";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.UserProfileId" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.UserProfileId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
